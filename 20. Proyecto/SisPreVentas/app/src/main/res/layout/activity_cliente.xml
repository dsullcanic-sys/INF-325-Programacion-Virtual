<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".ClienteActivity">

    <!-- Título con fondo decorativo -->
    <View
        android:id="@+id/viewHeader"
        android:layout_width="408dp"
        android:layout_height="40dp"
        android:background="#A8D5BA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtClienteTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catálogo de Platos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toTopOf="@id/viewHeader"
        app:layout_constraintBottom_toBottomOf="@id/viewHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView con elevación y margen -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/viewHeader"
        app:layout_constraintBottom_toTopOf="@id/btnHacerPedido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlatos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false" />

    </androidx.cardview.widget.CardView>

    <!-- Botón Hacer Pedido mejorado -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHacerPedido"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Hacer Pedido"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:letterSpacing="0.05"
        app:backgroundTint="#A8D5BA"
        app:cornerRadius="16dp"
        app:elevation="6dp"
        app:icon="@android:drawable/ic_menu_send"
        app:iconGravity="textStart"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:stateListAnimator="@null" />

</androidx.constraintlayout.widget.ConstraintLayout>