<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Barra lateral de color -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#B4C7E7"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPedidoIdFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ped001 - 2025-11-30"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtPedidoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente: Nombre Apellido"
                android:textSize="13sp"
                android:textColor="#6C757D"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtPedidoEstadoTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado: PEDIDO - Total: Bs. 0"
                android:textSize="13sp"
                android:textColor="#6C757D" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAccionPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver"
            android:textSize="13sp"
            app:backgroundTint="#B4C7E7"
            app:cornerRadius="8dp"
            android:layout_gravity="center_vertical"
            style="@style/Widget.MaterialComponents.Button" />
    </LinearLayout>

</androidx.cardview.widget.CardView>